[color]     
	ui = auto   

[color "branch"]     
	current = yellow reverse     
	local = yellow     
	remote = green   

[color "diff"]     
	meta = yellow bold     
	frag = magenta bold     
	old = red bold     
	new = green bold   

[color "status"]     
	added = yellow     
	changed = green     
	untracked = cyan

[user]
	name = alexauron
	email = sevillaciudaddelbetis@gmail.com
[alias]
	sla = log --oneline --decorate --graph --all -20
	aa = add --all
	unstage = reset
	uncommit = reset --soft HEAD
	df = diff --word-diff --color-words
	ck = checkout
	cm = commit -m

	st = status
	ci = commit     
	br = branch     
	co = checkout     
	df = diff     
	dc = diff --cached     
	lg = log -p     
	lol = log --graph --decorate --pretty=oneline --abbrev-commit     
	lola = log --graph --decorate --pretty=oneline --abbrev-commit --all     
	ls = ls-files      
	# Show files ignored by git:     
	ign = ls-files -o -i --exclude-standard 
	
[fetch]
	prune = true
[core]
	excludesfile = ~/.gitignore
	autocrlf = true
[branch]
	autosetupmerge = true
